                 <action android:name="com.akibb.bhakti.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            
            android:name="com.akibb.bhakti.Aarti"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.akibb.bhakti.AboutUs"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="com.akibb.bhakti.ABOUTUS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>